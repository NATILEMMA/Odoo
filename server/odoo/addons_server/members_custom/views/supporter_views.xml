<?xml version="1.0"?>
<odoo>


    <template id="asset_backend_survey" name="survey assets" inherit_id="web.assets_backend">
      <xpath expr="." position="inside">
        <script type="text/javascript" src="/members_custom/static/js/archive_unarchive.js"/>
      </xpath>
    </template>

  <!-- This record will create a tree view for supported Members -->
  <record id="supported_members_tree_view" model="ir.ui.view">
    <field name="name">Supporter Members</field>
    <field name="model">supporter.members</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" string="Name"/>
        <field name="age" string="Age"/>
        <field name="gender" string="Gender"/>
        <field name="ethnic_group" string="Ethnic Group"/>
        <field name="subcity_id" string="Subcity"/>
        <field name="wereda_id" string="Woreda"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- This record will create a form for Supported Members -->
  <record id="supported_members_form_view" model="ir.ui.view">
    <field name="name">Supporter Member Form</field>
    <field name="model">supporter.members</field>
    <field name="arch" type="xml">
      <form duplicate="false">
        <header>
          <field name="active" invisible="1"/>
          <field name="saved" invisible="1"/>
          <button name="archive_record" string="Archive" type="object" groups="members_custom.member_group_cell_manager" attrs="{'invisible': [('active', '=', False)]}" confirm="Are you sure you want to archive this supporter?"/>
          <button name="un_archive_record" string="Unarchive" type="object" groups="members_custom.member_group_cell_manager" attrs="{'invisible': [('active', '=', True)]}" confirm="Are you sure you want to remove this supporter from archive list?"/>
          <button type="object" name="send_approval" string="Send Approval" states="waiting for approval" class="btn btn-success" groups="members_custom.member_group_manager" confirm="Are you sure you want to Send Approval to Main Office and Cell?"/>
          <button type="object" name="create_candidate" string="Create a Candidate" states="waiting for approval" class="btn btn-primary" groups="members_custom.member_group_cell_manager" confirm="Are you sure you want to make this supporter a candidate?"/>
          <button type="object" name="deny_candidancy" string="Deny Candidacy" states="waiting for approval" class="btn btn-secondary" groups="members_custom.member_group_cell_manager" confirm="Are you sure you want to deny candidacy to this supporter?"/>
          <button type="object" name="postpone_approval" string="Postpone Decision" states="waiting for approval" class="btn btn-warning" groups="members_custom.member_group_cell_manager" confirm="Are you sure you added the right due date?"/>

          <button type="object" name="send_approval" string="Send Approval" class="btn btn-success" groups="members_custom.member_group_agent" confirm="Are you sure you want to Send Approval to Main Office and Cell?"/>
          <button type="object" name="create_candidate" string="Create a Candidate" class="btn btn-primary" groups="members_custom.member_group_agent" confirm="Are you sure you want to make this supporter a candidate?"/>
          <button type="object" name="deny_candidancy" string="Deny Candidacy" class="btn btn-secondary" groups="members_custom.member_group_agent" confirm="Are you sure you want to deny candidacy to this supporter?"/>
          <button type="object" name="postpone_approval" string="Postpone Decision" class="btn btn-warning" groups="members_custom.member_group_agent" confirm="Are you sure you added the right due date?"/>

          <field name="state" widget="statusbar" statusbar_visible="new,waiting for approval,postponed,approved,rejected"/>
        </header>
        <sheet>
          <div class="oe_button_box" name="button_box">
            <button class="oe_stat_button" name="%(base.action_attachment)d" type="action" icon="fa-files-o" attrs="{'invisible': [('state', '=', 'new')], 'readonly': [('state', 'in', ['postponed', 'approved', 'rejected'])]}">
              <field name="attachment_amount" string="Attachments" widget="statinfo"/>
            </button>
          </div>
          <separator/>
          <field name="image_1920" widget="image" class="oe_avatar" options='{"preview_image": "image_1920"}'/>
          <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
          <group>
            <group>
              <separator string="Information"/>
              <field name="name" placeholder="Eg. John Does Smith" attrs="{'readonly': [('saved', '=', True)]}" force_save="1"/>
              <field name="date" attrs="{'readonly': [('saved', '=', True)]}" force_save="1"/>
              <field name="age" string="Age" force_save="1"/>
              <field name="gender" string="Gender" attrs="{'readonly': [('saved', '=', True)]}" force_save="1"/>
              <field name="ethnic_group" string="Ethnic Group" attrs="{'readonly': [('saved', '=', True)]}" force_save="1" options="{'no_create': True, 'no_create_edit': True}"/>
              <separator string="Educational Status"/>
              <field name="education_level" string="Education Level" options="{'no_create': True, 'no_create_edit': True}"/>
              <field name="field_of_study_id" string="Field of Study" options="{'no_create': True, 'no_create_edit': True}"/>
              <field name="is_user_input" invisible="1"/>
              <field name="user_input" attrs="{'invisible': [('is_user_input', '=', False)]}" string="Other Field"/>
              <separator string="Supporter Status"/>
              <field name="start_of_support" string="Start of Support Year" attrs="{'readonly': [('saved', '=', True)]}"/>
              <field name="status"/>
              <field name="gov_responsibility"/>
              <field name="becomes_a_candidate_on"/>
            </group>
            <group>
              <separator string="Employment Status"/>
              <field name="work_place" string="Place Of Work"/>
              <field name="position" string="Job Position"/>
              <field name="income" string="Income"/>
              <separator string="Address"/>
              <field name="subcity_id" string="Subcity" options="{'no_create': True, 'no_create_edit': True}"/>
              <field name="wereda_id" string="Woreda" options="{'no_create': True, 'no_create_edit': True}"/>
              <field name="house_number" string="House Number"/>
              <field name="phone" string="Phone"/>
              <field name="email_address" string="Email"/>
              <field name="candidate_id"/>
              <button name="add_attachment" string="Attachment" type="object" class="oe_highlight fa fa-paperclip" attrs="{'invisible': [('state', '=', 'new')], 'readonly': [('state', 'in', ['postponed', 'approved', 'rejected'])]}"/>
              <field name="x_css" force_save="1" nolabel="1" invisible="1"/>
            </group>
          </group>
          <notebook>
            <page string="Educational History">
              <field name="educational_history">
                <tree editable="bottom">
                  <field name="education_level"/>
                  <field name="field_of_study_id"/>
                </tree>
              </field>
            </page>
            <page string="Notes">
              <field name="note_id" attrs="{'readonly': [('state', '!=', 'waiting for approval')]}"/>
            </page>
            <page name="archive" string="Archives" attrs="{'invisible': [('active', '=', True)]}">
                <field name="archive_ids" readonly="1">
                    <tree>
                        <field name="date_from" string="Date From"/>
                        <field name="date_to" string="Date To"/>
                        <field name="departure_reason" string="Reason"/>
                        <field name="additional_information" string="Additional Information"/>
                    </tree>
                </field>
            </page>
          </notebook>
        </sheet>
        <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <record id="supporter_kanban_view" model="ir.ui.view">
      <field name="name">Supporter Kanban</field>
      <field name="model">supporter.members</field>
      <field name="arch" type="xml">
          <kanban class="o_supporter_kanban" sample="1">
              <field name="id"/>
              <field name="image_1920"/>
              <field name="name"/>
              <field name="age"/>
              <field name="work_place"/>
              <field name="position"/>
              <field name="subcity_id"/>
              <field name="wereda_id"/>
              <field name="phone"/>
              <templates>
                  <t t-name="kanban-box">
                      <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_supporter_kanban">
                          <t t-if="record.id.raw_value">
                              <t t-set="placeholder" t-value="'/base/static/img/avatar_grey.png'"/>
                              <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('supporter.members', 'image_1920', record.id.raw_value, placeholder)})" role="img"/>
                          </t>
                          <div class="oe_kanban_details d-flex flex-column justify-content-between">
                              <div>
                                  <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/>, <field name="age"/></strong>
                                  <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                  <ul>
                                      <li t-if="record.position.raw_value"><field name="position"/> at <field name="work_place"/></li>
                                      <li t-if="record.subcity_id.raw_value or record.wereda_id.raw_value">
                                          <t t-if="record.subcity_id.raw_value"><field name="subcity_id"/><t t-if="record.wereda_id.raw_value">, </t></t>
                                          <t t-if="record.wereda_id.raw_value"><field name="wereda_id"/></t>
                                      </li>
                                      <li t-if="record.phone.raw_value" class="o_text_overflow"><field name="phone"/></li>
                                  </ul>
                              </div>
                              <div class="o_kanban_record_bottom">
                                  <div class="oe_kanban_bottom_left"/>
                                  <div class="oe_kanban_bottom_right"/>
                              </div>
                          </div>
                      </div>
                  </t>
              </templates>
          </kanban>
      </field>
  </record>

  <!-- This record will handle the search options for Supported Members -->
  <record id="supported_view_search" model="ir.ui.view">
    <field name="name">supported.view.search</field>
    <field name="model">supporter.members</field>
    <field name="arch" type="xml">
      <search>
          <field name="name" string="Names" filter_domain="[('name', 'ilike', self)]"/>
          <field name="phone" string="Phone" filter_domain="[('phone', 'ilike', self)]"/>
          <filter name="state" string="State" domain="[('state', 'in', ['new', 'postponed'])]"/>
          <group expand="0" string="Group By" colspan="10" col="8">
            <filter name="subcity" string="Subcity" context="{'group_by': 'subcity_id'}"/>
            <filter name="woreda" string="Woreda" context="{'group_by': 'wereda_id'}"/>
            <filter name="gender" string="Gender" context="{'group_by': 'gender'}"/>
            <filter name="ethnicity" string="Ethnic Group" context="{'group_by': 'ethnic_group'}"/>
          </group>
      </search>
    </field>
  </record>


  <!-- This record will create the action for supported members -->
  <record id="supported_members_action" model="ir.actions.act_window">
    <field name="name">Supporter Members</field>
    <field name="res_model">supporter.members</field>
    <field name="view_mode">tree,form,kanban,pivot,graph</field>
    <field name="limit">20</field>
    <field name="search_view_id" ref="supported_view_search"/>
    <field name="context">{'search_default_state': 1}</field>
    <field name="domain">['|', '|', '|', '|', '|', '|', '|',
                          ('wereda_id.main_office_ids.cell_ids.cell_admin', '=', uid),
                          ('wereda_id.main_office_ids.league_cell_ids.cell_admin', '=', uid),
                          ('wereda_id.main_office_ids.main_admin', '=', uid),
                          ('wereda_id.branch_manager.id', '=', uid),
                          ('subcity_id.parent_manager.id', '=', uid),
                          ('subcity_id.city_id.city_manager', 'in', [uid]),
                          ('subcity_id.city_id.transfer_handler', '=', uid),
                          ('subcity_id.city_id.responsible_id.system_admin', '=', uid)]</field>  </record>

  <menuitem id="supporter_members"
            name="Supporters"
            parent="menu_membership"
            sequence="6"           
            action="supported_members_action"
            groups="members_custom.member_group_cell_manager,members_custom.member_group_agent"/>

</odoo>
