<?xml version="1.0"?>
<odoo>

    <!-- This record will hold the form for archive -->
    <record id="gratuity_analytic_account" model="ir.ui.view">
        <field name="name">Analytic Account</field>
        <field name="model">analytic.account.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="gratuity_id" invisible="1"/>
                    <field name="analytic_id" string="Analytic Account"/>
                </group>
                <footer>
                    <button name="action_done" string="Save" type="object" class="oe_highlight btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>