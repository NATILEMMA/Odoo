<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="appointment_slot_form_view">
            <field name="model">s2u.appointment.slot</field>
            <field name="arch" type="xml">
                <form string="Appointment Slot" duplicate="false">
                    <header>
                        <!-- <button name="approve_slots" string="Approve Slots" type="object" groups="visitor_gate_management.group_managers" class="btn btn-primary" attrs="{'invisible': [('state', '=', 'approved')]}" confirm="Are you sure you want to Approve Slots?"/> -->
                        <!-- <button name="send_slots_for_approval" string="Send Slots for Approval" type="object" groups="visitor_gate_management.group_employees" class="btn btn-primary" states="draft" confirm="Are you sure you want to Send Slots for Approval?"/> -->
                        <button name="make_more_slots" string="Make More Slots" type="object" class="oe_highlight" confirm="Are You Sure You Want To Make More Slots"/>
                        <!-- <button name="set_to_draft" string="Set to Draft" type="object" groups="visitor_gate_management.group_managers" class="btn btn-primary" states="approved" confirm="Are you sure you want to Set back to Draft?"/> -->
                        <!-- <field name="state" widget="statusbar"/> -->
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <!-- <field name="x_css" invisible="1"/> -->
                                <field name="user_id"/>
                                <field name="day"/>
                                <field name="slot_start" widget="float_time"/>
                                <field name="slot_end" widget="float_time"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="appointment_slot_tree_view">
            <field name="model">s2u.appointment.slot</field>
            <field name="arch" type="xml">
                <tree string="Slots">
                    <field name="user_id"/>
                    <field name="day"/>
                    <field name="slot_start" widget="float_time"/>
                    <field name="slot_end" widget="float_time"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="appointment_slot_search">
            <field name="model">s2u.appointment.slot</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="user_id" string="User" context="{'group_by': 'user_id'}"/>
                    <field name="day" string="Day" context="{'group_by': 'day'}"/>
                </search>
            </field>
        </record>

        
        <record id="appointment_slot_action" model="ir.actions.act_window">
            <field name="name">Appointment Slots</field>
            <field name="res_model">s2u.appointment.slot</field>
            <field name="context">{'search_default_user_id': 1, 'search_default_day': 1}</field>
            <field name="view_mode">tree,form,pivot,graph</field>
        </record>

    </data>
</odoo>
