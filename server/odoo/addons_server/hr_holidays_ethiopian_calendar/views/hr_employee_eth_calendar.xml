    <record id="view_employee_form_leave_inherited_view" model="ir.ui.view">
        <field name="name">hr.employee.leave.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_holidays.view_employee_form_leave_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='leave_date_to']" position="replace">
                <field name="is_pagum_to" invisible="1"/>
                <field  name="ethiopian_to" style="float:left" attrs="{'invisible': ['|', ('is_pagum_to', '=',False)]}" readonly= "1" groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                <field  name="pagum_to" style="float:left"  attrs="{'invisible': ['|',('is_pagum_to', '!=',False)]}"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                <field  name="leave_date_to" force_save="1" class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory"/>
            </xpath>
        </field>
    </record>

