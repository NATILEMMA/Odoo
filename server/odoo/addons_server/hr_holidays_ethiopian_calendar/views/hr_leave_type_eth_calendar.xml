<?xml version="1.0"?>
<odoo>


    <record id="edit_holiday_status_form_inherited_view" model="ir.ui.view">
        <field name="name">hr.leave.type.form</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_start']" position="replace">
                <field  name="is_pagum_from" invisible="1" force_save="1"/>
                <field  name="validity_start"  class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory" force_save="1"/>
                <field  name="ethiopian_from" class="oe_read_only" id="ethiopianCalendar_1" style="float:left" attrs="{'invisible': ['|', ('is_pagum_to', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                <field  name="pagum_from" class="oe_read_only" style="float:left"  attrs="{'invisible': ['|',('is_pagum_to', '!=',False)  ]}"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                <div>
                </div>
                <div style="margin-bottom:40px;margin-top:-15px;margin-left:10px;margin-right:0px">
                <widget name="ethiopian_calander_widget"  style=" float:left;width:226px;" class="oe_edit_only" groups="EthiopianCalendar.group_ethio_datepicker"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='validity_stop']" position="replace">
                <field name="is_pagum_to" invisible="1" force_save="1"/>
                <field  name="validity_stop"  class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory" force_save="1"/>
                <field  name="ethiopian_to" class="oe_read_only" id="ethiopianCalendar_1" style="float:left" attrs="{'invisible': ['|', ('is_pagum_to', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                <field  name="pagum_to" class="oe_read_only" style="float:left"  attrs="{'invisible': ['|',('is_pagum_to', '!=',False)  ]}"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                <div>
                </div>
                <div style="margin-bottom:40px;margin-top:-15px;margin-left:10px;margin-right:0px">
                <widget name="ethiopian_calander_widget_two"  style=" float:left;width:226px;" class="oe_edit_only" groups="EthiopianCalendar.group_ethio_datepicker"/>
                </div>
            </xpath>
        </field>
    </record> 

</odoo>