<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <!-- Stocking picking  Form View  \ Date Widget Modification -->

                <record id="view_stock_picking_form_inherit_local" model="ir.ui.view">
                    <field name="name">stock.picking.form.inherit.local</field>
                    <field name="model">stock.picking</field>
                    <field name="inherit_id" ref="stock.view_picking_form"/>
                    <field name="arch" type="xml">
        
                    
                        <xpath expr="//field[@name='scheduled_date']" position="replace">
                                <field name="is_pagum_from" invisible="1"/>
                                <field  name="scheduled_date"  class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory"/>
                                <field  name="ethiopian_from" class="oe_read_only" string="Scheduled Date" style=" float:left" attrs="{'invisible': ['|', ('is_pagum_from', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker"/>
                                <field  name="pagum_from" class="oe_read_only"  string="Scheduled_Date" style=" float:left"  attrs="{'invisible': ['|',('is_pagum_from', '!=',False)  ]}"  groups="EthiopianCalendar.group_ethio_datepicker"/>
        
                                 <div>
                                 </div>
                                <div style="margin-bottom:40px;margin-top:-22px;margin-left:10px;margin-right:0px">
                                <widget name="ethiopian_calander_widget"  style=" float:left;width:226px;" class="oe_edit_only"  groups="EthiopianCalendar.group_ethio_datepicker"/>
                                </div>
                           
                        </xpath>
                    
                    </field>
                    
                </record>


        <record id="view_stock_picking_tree_inherit_local" model="ir.ui.view">
            <field name="name">stock.picking.tree.inherit.local</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scheduled_date']" position="replace">
                        <field  name="scheduled_date"   groups="EthiopianCalendar.group_gregory"/>
                        <field  name="ethiopian_from"  string="Scheduled Date" attrs="{'invisible': ['|', ('is_pagum_from', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker"/>
                        <field name="is_pagum_from" invisible="1"/>
                </xpath>
            </field>
        </record>

                <!-- Stocking Adjustment  Form View  \ Date Widget Modification -->

                <record id="view_stock_inventory_form_inherit_local" model="ir.ui.view">
                    <field name="name">stock.inventory.form.inherit.local</field>
                    <field name="model">stock.inventory</field>
                    <field name="inherit_id" ref="stock.view_inventory_form"/>
                    <field name="arch" type="xml">
                        <xpath expr="//field[@name='accounting_date']" position="replace">
                                <field name="is_pagum_from" invisible="1"/>
                                <field  name="accounting_date"  class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory"/>
                                <field  name="ethiopian_from" class="oe_read_only" string="Accounting Date" style=" float:left" attrs="{'invisible': ['|', ('is_pagum_from', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker"/>
                                <field  name="pagum_from" class="oe_read_only"  string="Accounting Date" style=" float:left"  attrs="{'invisible': ['|',('is_pagum_from', '!=',False)  ]}"  groups="EthiopianCalendar.group_ethio_datepicker"/>
                                    <div>
                                    </div>
                                <div style="margin-bottom:40px;margin-top:-22px;margin-left:10px;margin-right:0px">
                                <widget name="ethiopian_calander_widget"  style=" float:left;width:226px;" class="oe_edit_only"  groups="EthiopianCalendar.group_ethio_datepicker"/>
                                </div>
                        </xpath>
                    </field>
                </record>


                <record id="view_stock_inventory_tree_inherit_local" model="ir.ui.view">
                    <field name="name">stock.inventory.tree.inherit.local</field>
                    <field name="model">stock.inventory</field>
                    <field name="inherit_id" ref="stock.view_inventory_tree"/>
                    <field name="arch" type="xml">
                        <xpath expr="//field[@name='date']" position="replace">
                                <field  name="date"   groups="EthiopianCalendar.group_gregory"/>
                                <field  name="ethiopian_from"  string="Scheduled Date" attrs="{'invisible': ['|', ('is_pagum_from', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker"/>
                                <field name="is_pagum_from" invisible="1"/>
                        </xpath>
                    </field>
                </record>


                       <!-- Stocking Scrap  Form View  \ Date Widget Modification -->

                     <record id="view_stock_scrap_form_inherit_local" model="ir.ui.view">
                        <field name="name">stock.scrap.form.inherit.local</field>
                        <field name="model">stock.scrap</field>
                        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
                        <field name="arch" type="xml">
                            <xpath expr="//field[@name='date_done']" position="replace">
                                    <field name="is_pagum_from" invisible="1"/>
                                    <field  name="date_done"  readonly='1' attrs="{'invisible': ['|', ('state', '=','draft')]}"  class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory"/>
                                    <field  name="ethiopian_from" readonly='1' string="Date" style=" float:left" attrs="{'invisible': ['|', ('is_pagum_from', '=',False),('state', '=','draft')]}" groups="EthiopianCalendar.group_ethio_datepicker"/>
                                    <field  name="pagum_from" class="oe_read_only"  string="Date" style=" float:left"  attrs="{'invisible': ['|',('is_pagum_from', '!=',False) ,('state', '=','draft') ]}"  groups="EthiopianCalendar.group_ethio_datepicker"/>
                                        <div>
                                        </div>
                                    <!-- <div style="margin-bottom:40px;margin-top:-22px;margin-left:10px;margin-right:0px">
                                    <widget name="ethiopian_calander_widget"  style=" float:left;width:226px;" class="oe_edit_only"  groups="EthiopianCalendar.group_ethio_datepicker"/>
                                    </div> -->
                            </xpath>
                        </field>
                    </record>

                    <record id="view_stock_scrap_tree_inherit_local" model="ir.ui.view">
                        <field name="name">stock.scrap.tree.inherit.local</field>
                        <field name="model">stock.scrap</field>
                        <field name="inherit_id" ref="stock.stock_scrap_tree_view"/>
                        <field name="arch" type="xml">
                            <xpath expr="//field[@name='date_done']" position="replace">
                                    <field  name="date_done"   groups="EthiopianCalendar.group_gregory"/>
                                    <field  name="ethiopian_from"  string="Scheduled Date" attrs="{'invisible': ['|', ('is_pagum_from', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker"/>
                                    <field name="is_pagum_from" invisible="1"/>
                            </xpath>
                        </field>
                    </record>





                <!-- Customer/Vendor Payment   Form View  \ Date Widget Modification -->

                <record id="view_payment_account_form_inherit_local" model="ir.ui.view">
                    <field name="name">account.payment.form.inherit.local</field>
                    <field name="model">account.payment</field>
                    <field name="inherit_id" ref="account.view_account_payment_form"/>
                    <field name="arch" type="xml">
                        <xpath expr="//field[@name='payment_date']" position="replace">
                                <field name="is_pagum_from" invisible="1"/>
                                <field  name="payment_date"  class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory"/>
                                <field  name="ethiopian_from" class="oe_read_only" string="Accounting Date" style=" float:left" attrs="{'invisible': ['|', ('is_pagum_from', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker"/>
                                <field  name="pagum_from" class="oe_read_only"  string="Accounting Date" style=" float:left"  attrs="{'invisible': ['|',('is_pagum_from', '!=',False)  ]}"  groups="EthiopianCalendar.group_ethio_datepicker"/>
                                    <div>
                                    </div>
                                <div style="margin-bottom:40px;margin-top:-22px;margin-left:10px;margin-right:0px">
                                <widget name="ethiopian_calander_widget"  style=" float:left;width:226px;" class="oe_edit_only"  groups="EthiopianCalendar.group_ethio_datepicker"/>
                                </div>
                        </xpath>
                    </field>
                </record>



    </data>
</odoo>