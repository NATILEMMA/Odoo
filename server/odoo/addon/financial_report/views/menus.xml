<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_financial_sr">
        <field name="name">financial.report.add.sr</field>
        <field name="model">financial.report</field>
        <field name="inherit_id" ref="base_accounting_kit.financial_report_wiz_modified"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='date_to']" position="after">
               <group col="2">
                  <field name="fiscal_year"/>
                  <field name="period"/>
                </group>
        </xpath>
        </field>
    </record>

