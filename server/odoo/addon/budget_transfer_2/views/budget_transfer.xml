                <div class="oe_title">
                    <h1>
                        <field name="squ" string="Reference"/>
                    </h1>
                </div>
              <group class="col-6">
                    <field name="date" attrs="{'readonly': [('state', 'in', ['approved'])]}"/>
                    <field name="move_id" readonly="1"/>

