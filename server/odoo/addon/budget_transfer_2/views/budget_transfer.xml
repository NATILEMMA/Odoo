                    <page string="Budget Transfer">
               
                     <field name="budget_line">
                         <tree
                                editable="bottom"
                            >
                                <control>
                                    <create name="add_product_control" string="Add Transfer"/>
                                   
                                </control>
                                <!-- <field name="budget_type"/> -->
                                <field name="from_budget_code" />
                                <field name="from_budgetary" string="Budgetary Line"/>
