<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
     
                <!-- 
                    
                    Adding Ethiopian Calander Date to Time Fream 

                    step 1: Inherit the View of the model to which you wish to add the Ethiopian calendar extension.

                    step 2, xpath your exact location of converting date fields if your date fields are located within a form sheet, use col and colspan to adjust CSS
                
                    Ethiopian Date Picker Widget

                    - ethiopian_calander_widget
                    - ethiopian_calander_widget_two
                    - ethiopian_calander_widget_three
                    - ethiopian_calander_widget_four
                
                
                -->

        <record model="ir.ui.view" id="fo_property_counter_form_view_inherit_view">
            <field name="name">Employee Management</field>
            <field name="model">fo.property.counter</field>
            <field name="inherit_id" ref="visitor_gate_management.fo_property_counter_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="replace">
                    <field name="is_pagum_from" invisible="1"/>
                    <field  name="ethiopian_from" style="float:left" attrs="{'invisible': ['|', ('is_pagum_from', '=',False)], 'readonly': [('state', '!=', 'draft')]}" groups="EthiopianCalendar.group_ethio_datepicker"/>
                    <field  name="pagum_from" style="float:left"  attrs="{'invisible': ['|',('is_pagum_from', '!=',False)  ], 'readonly': [('state', '!=', 'draft')]}"  groups="EthiopianCalendar.group_ethio_datepicker"/>
                    <div>
                    </div>
                    <div style="margin-bottom:40px;margin-top:-32px;margin-left:8px;margin-right:0px">
                    <widget name="ethiopian_calander_widget" class="oe_edit_only" style="float:left;width:226px;" groups="EthiopianCalendar.group_ethio_datepicker" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    </div>
                    <field  name="date" attrs="{'readonly': [('state', '!=', 'draft')]}" force_save="1" class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory"/>
                </xpath>
            </field>
        </record> 


        <record model="ir.ui.view" id="fo_property_counter_tree_view_inherited_view">
            <field name="name">Employee Management</field>
            <field name="model">fo.property.counter</field>
            <field name="inherit_id" ref="visitor_gate_management.fo_property_counter_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="replace">
                    <field name="is_pagum_from" invisible="1"/>
                    <field  name="ethiopian_from"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                    <field  name="pagum_from"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1" optional="hidden"/>
                    <field  name="date" force_save="1" groups="EthiopianCalendar.group_gregory"/>
                </xpath>
            </field>
        </record>             

    </data>
</odoo>
