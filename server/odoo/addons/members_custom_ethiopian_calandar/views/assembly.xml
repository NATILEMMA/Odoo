<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
     
                <!-- 
                    
                    Adding Ethiopian Calander Date to Time Fream 

                    step 1: Inherit the View of the model to which you wish to add the Ethiopian calendar extension.

                    step 2, xpath your exact location of converting date fields if your date fields are located within a form sheet, use col and colspan to adjust CSS
                
                    Ethiopian Date Picker Widget

                    - ethiopian_calander_widget
                    - ethiopian_calander_widget_two
                    - ethiopian_calander_widget_three
                    - ethiopian_calander_widget_four
                
                
                -->

        <record id="assembly_form_inherited_view" model="ir.ui.view">
           <field name="name">General Assembly</field>
             <field name="model">assembly</field>
            <field name="inherit_id" ref="members_custom.assembly_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='start_date']" position="replace">
                    <field name="is_pagum_from" invisible="1"/>
                    <field  name="start_date" force_save="1" class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory" attrs="{'readonly': [('state', 'not in', ['new'])]}"/>
                    <field  name="ethiopian_from" class="oe_read_only" style="float:left" attrs="{'invisible': ['|', ('is_pagum_from', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                    <field  name="pagum_from" class="oe_read_only" style="float:left" attrs="{'invisible': ['|',('is_pagum_from', '!=',False)]}"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                        <div>
                        </div>
                    <div style="margin-bottom:40px;margin-top:-15px;margin-left:10px;margin-right:0px">
                    <widget name="ethiopian_calander_widget"  style="float:left;width:226px;" class="oe_edit_only" groups="EthiopianCalendar.group_ethio_datepicker" attrs="{'invisible': [('state', 'not in', ['new'])]}"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='end_date']" position="replace">
                    <field name="is_pagum_to" invisible="1" force_save="1"/>
                    <field  name="end_date"  class="col-50" colspan="3" groups="EthiopianCalendar.group_gregory" force_save="1" attrs="{'readonly': [('state', 'not in', ['new'])]}"/>
                    <field  name="ethiopian_to" class="oe_read_only" style="float:left" attrs="{'invisible': [('is_pagum_to', '=',False)]}" groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                    <field  name="pagum_to"  class="oe_read_only" style="float:left"  attrs="{'invisible': [('is_pagum_to', '!=',False)]}"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                    <div>
                    </div>
                    <div style="margin-bottom:40px;margin-top:-15px;margin-left:10px;margin-right:0px">
                    <widget name="ethiopian_calander_widget_two"  style=" float:left;width:226px;" class="oe_edit_only" groups="EthiopianCalendar.group_ethio_datepicker" attrs="{'invisible': [('state', 'not in', ['new'])]}"/>
                    </div>
                </xpath>
            </field>
        </record> 

    </data>
</odoo>