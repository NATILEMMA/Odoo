<?xml version="1.0"?>
<odoo>


    <record id="hr_leave_view_form_inherited_view" model="ir.ui.view">
        <field name="name">hr.leave.view.form</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='request_date_from']" position="replace">
                <field  name="request_date_from" groups="EthiopianCalendar.group_gregory" force_save="1" attrs="{'readonly': [('state', 'not in', ('draft', 'confirm'))]}"/>
                <div class="o_row o_row_readonly o_hr_holidays_dates">
                    <field name="is_pagum_from" invisible="1" force_save="1"/>
                    <field  name="ethiopian_from" class="oe_read_only" id="ethiopianCalendar_1" style="float:left" attrs="{'invisible': [('is_pagum_to', '=',False)], 'readonly': [('state', 'not in', ('draft', 'confirm'))]}" groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                    <field  name="pagum_from" class="oe_read_only" style="float:left"  attrs="{'invisible': [('is_pagum_to', '!=',False)], 'readonly': [('state', 'not in', ('draft', 'confirm'))]}"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                    <div>
                    </div>
                    <div style="margin-bottom:40px;margin-top:-15px;margin-left:10px;margin-right:0px">
                        <widget name="ethiopian_calander_widget"  style=" float:left;width:100px;" class="oe_edit_only" groups="EthiopianCalendar.group_ethio_datepicker" attrs="{'invisible': [('state', 'not in', ('draft', 'confirm'))]}"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='request_date_to']" position="replace">
                <field  name="request_date_to" groups="EthiopianCalendar.group_gregory" force_save="1" attrs="{'readonly': [('state', 'not in', ('draft', 'confirm'))], 'invisible': ['|', ('request_unit_half', '=', True), ('request_unit_hours', '=', True)]}"/>
                <div class="o_row o_row_readonly o_hr_holidays_dates">
                    <field name="is_pagum_to" invisible="1" force_save="1"/>
                    <field  name="ethiopian_to" class="oe_read_only" id="ethiopianCalendar_1" style="float:left" attrs="{'invisible': ['|', '|', ('request_unit_half', '=', True), ('request_unit_hours', '=', True), ('is_pagum_to', '=',False)], 'readonly': [('state', 'not in', ('draft', 'confirm'))]}" groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                    <field  name="pagum_to" class="oe_read_only" style="float:left"  attrs="{'invisible': ['|', '|', ('request_unit_half', '=', True), ('request_unit_hours', '=', True), ('is_pagum_to', '!=',False)], 'readonly': [('state', 'not in', ('draft', 'confirm'))]}"  groups="EthiopianCalendar.group_ethio_datepicker" force_save="1"/>
                    <div>
                    </div>
                    <div style="margin-bottom:40px;margin-top:-15px;margin-left:10px;margin-right:0px">
                        <widget name="ethiopian_calander_widget_two"  style=" float:left;width:100px;" class="oe_edit_only" groups="EthiopianCalendar.group_ethio_datepicker" attrs="{'invisible': ['|', '|', ('state', 'not in', ['draft', 'confirm']), ('request_unit_half', '=', True), ('request_unit_hours', '=', True)]}"/>
                    </div>
                </div>
            </xpath> 
        </field>
    </record> 

</odoo>