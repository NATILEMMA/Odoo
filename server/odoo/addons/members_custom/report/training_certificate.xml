<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="training_certificate_template">
    <t t-set="data_report_landscape" t-value="True" />
    <t t-set="full_width" t-value="True" />
    <t t-call="web.html_container">
    <t t-lang="am_ET"/>
      <t t-foreach="data" t-as="o">
        <div class="header" style='background-image:url("/members_custom/static/img/certificate_header.png") !important; background-size: 100% 100% !important; background-repeat: no-repeat !important; height: 100% !important; width: 100% !important; '><p style="width:100%; height:200px"></p></div>
        <div class="article">
          <div style='background-image:url("/members_custom/static/img/body_certificate.png"); background-size: 100% 400px; background-repeat: no-repeat; height: 300px; width: 100%;'>
            <div style=" margin-left: 350px;padding-top: 140px;width: 510px;text-align: center;">
              <table align="center" style="page-break-after: always !important">
                <tr>
                    <td>
                    <br /><br />
                      <div style="display: table-cell; vertical-align: middle">
                        <div style="border-bottom: 2px solid black; font-size: 32px; font-style: italic; margin: 20px auto; width: 400px">
                            <t t-esc="o['name']"/>
                        </div>

                        <div style="margin: 20px">
                            to certify his/her participation for <strong> <t t-esc="o['program_name']" /></strong> training,
                            <strong> <t t-esc="o['program_round']" /></strong>th round at <strong> <t t-esc="o['program_convener']" /></strong> from
                            <strong> <t t-esc="o['date_from']"/></strong> to <strong> <t t-esc="o['date_from']" /></strong> for the year <strong> <t t-esc="o['year']"/></strong>, 
                            with training result of <strong> <t t-esc="o['result']"/></strong>.
                        </div>
                      </div>
                    </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <div class="footer" style='background-image:url("/members_custom/static/img/certificate_footer.png") !important; background-size: 100% 100% !important; background-repeat: no-repeat !important; height: 100px !important; width: 100% !important; '><p style="width:100%; height:200px"></p></div>
      </t>
    </t>
  </template>
</odoo>